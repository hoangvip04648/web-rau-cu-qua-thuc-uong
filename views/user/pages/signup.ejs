    <script>
        function handleSignUp(){
            const email = $('#input-email').val();
            const password = $('#input-password').val();
            const confirm = $('#confirm-password').val();
            if(password != confirm)
            {
                alert('Mật khẩu không trùng khớp')
            }
            else
            {
                $.ajax({
                url:'/user/tao-tai-khoan',
                method:'post',
                dataType:'json',
                data:{
                    email:email,
                    password:password
                },
                success:(res)=>{
                   if(res.success)
                   {
                       alert(res.message)
                       window.location.replace('/page/login');

                   }
                   else
                   {
                       alert(res.message);
                   }
                },
                error: (err)=>{
                    alert(err);
                }
            })
            }
            
        }
    </script>

