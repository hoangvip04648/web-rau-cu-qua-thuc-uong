    <script>
        function handleForgotPassword(){
            const email = $('#input-email').val();
            $.ajax({
                url:'/user/quen-mat-khau',
                method:'post',
                dataType:'json',
                data:{
                    email:email,
                },
                success:(res)=>{
                    $('#forgot-password').html(`<strong>${res}</strong><br><br>`);
                },
                error: (err)=>{
                    alert(err);
                }
            })
        }
    </script>

